{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
<div class="cont">
    <div class="header">
        <h1 class="title-center-h1">Administration</h1>
        <div class="header-btn">
            <a href="{{ url('add_album') }}" class="btn btn-primary">Ajouter une collection</a>
        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="{{ url('admin_user') }}">Les utilisateurs</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="{{ url('admin_collection') }}">Les collections</a>
        </li>
    </ul>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Items</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% set i = 0 %}
        {% for collection in collections %}
            <tr>
                <td>{{ collection[0] }}</td>
                <td>{{ collection[1] }}</td>
                <td class="table-items">
                    {{ collection[2] }}
                </td>
                <td class="table-action">
                    <a href="{{ path('show_album', {'id': collection[0]}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="{{ path('delete_album', {'id': collection[0]}) }}">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun r√©sultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}